# Environment
NODE_ENV=production

# Server Configuration  
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@host:5432/database"

# JWT - Generate a strong 64+ character secret
JWT_SECRET="your-super-secret-jwt-key-here"

# AWS Configuration
AWS_REGION=eu-west-3

# Email configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Client URLs - Update with your production domain
CLIENT_URL=https://yourproductiondomain.com
NEXT_PUBLIC_API_BASE_URL=https://yourproductiondomain.com/api
NEXT_PUBLIC_BASE_URL=https://yourproductiondomain.com
NEXT_PUBLIC_MEDIA_BASE_URL=https://yourproductiondomain.com

# Map and External Services
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token
NEXT_PUBLIC_AWS_COGNITO_USER_POOL_ID=your-cognito-pool-id
NEXT_PUBLIC_AWS_COGNITO_USER_POOL_CLIENT_ID=your-cognito-client-id